<controls:MetroWindow x:Class="Fusion.Visao.NotaFiscalEletronica.Principal.TransmitirNfeOpcoes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Opções NF-e"
        Height="280" Width="320"
                      WindowStartupLocation="CenterScreen"
                      Style="{DynamicResource MetroWindowStyle}"
                      ResizeMode="NoResize">

    <DockPanel LastChildFill="False" Margin="15,10">

        <Button DockPanel.Dock="Top" Height="35" Margin="0,5"
                Content="Cancelar"
                Click="ClickBotaoCancelar"/>

        <Button DockPanel.Dock="Top" Height="35" Margin="0,5"
                Content="Carta correção"
                Click="ClickBotaoCartaCorrecao"/>

        <Button DockPanel.Dock="Top" Height="35" Margin="0,5"
                Content="Editar"
                Click="ClickBotaoEditar"/>
    </DockPanel>
</controls:MetroWindow>
