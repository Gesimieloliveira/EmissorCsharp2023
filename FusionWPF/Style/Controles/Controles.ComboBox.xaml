<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controles="clr-namespace:FusionWPF.Controles">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.ComboBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="ComboBoxEditavel" BasedOn="{StaticResource MahApps.Styles.ComboBox.Virtualized}"
           TargetType="{x:Type controles:ComboBoxEditavel}">
        <Setter Property="IsEditable" Value="True" />
    </Style>

    <Style x:Key="ComboBoxEditavelItem" BasedOn="{StaticResource MahApps.Styles.ComboBoxItem}" TargetType="{x:Type ComboBoxItem}" />

</ResourceDictionary>