<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:helpers="clr-namespace:FusionWPF.Helpers">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/themes/flyout.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="FusionFlyout" TargetType="{x:Type controls:Flyout}"
           BasedOn="{StaticResource {x:Type controls:Flyout}}">
        <Setter Property="IsModal" Value="True" />
        <Setter Property="Theme" Value="Adapt" />
        <Setter Property="helpers:FlyoutHelper.CloseOnEscape" Value="True" />
    </Style>

</ResourceDictionary>