<UserControl x:Class="FusionNfce.Visao.Principal.FinalizarVenda.Outros.DescricaoOutrosForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FusionNfce.Visao.Principal.FinalizarVenda.Outros"
             mc:Ignorable="d" 
             Width="300"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White"
             Height="105">
    <StackPanel Margin="5">
        <TextBlock Margin="0,0,0,5">Descrição pagamento</TextBlock>
        <TextBox 
            Text="{Binding DescricaoOutros}"
            MaxLength="60" Margin="0,0,0,10"></TextBox>
        <Button Command="{Binding EnviarDescricaoOutrosCommand}">Adicionar descrição do pagamento</Button>
    </StackPanel>
</UserControl>
